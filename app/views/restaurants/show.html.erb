
<div class="card m-3 " >
  <h1 class="mt-2 ml-2"><%= @restaurant.name %></h1>
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= @restaurant.name %></h5>
    <p class="card-text">Come visit us: <%= @restaurant.address %></p>
    <p class="card-text"><small class="text-muted">Food category: <%= @restaurant.category %></small></p>
    <button class="btn btn-primary"><%= link_to 'Add review', new_restaurant_review_path(@restaurant) %>
    <p class="card-text"><% @restaurant.reviews.each do |review| %>
      <%=review.content %>
      <%=review.rating %>
      <% end %>
    </p>
    <button class="btn btn-primary"><%= link_to 'Back to the list', restaurants_path %>
  </div>
</div>
